SpellIcon < Button
  width: 32
  height: 32
  image-size: 32 32
  image-clip: 0 0 0 0
  image-color: white
  focusable: false
  anchors.top: parent.top
  anchors.left: parent.left

SpellProgress < UIProgressRect
  background: #585858AA
  percent: 100
  focusable: false
  font: verdana-11px-rounded
  color: #FFFFFF

UIWindow
  id: optionsWindow
  size: 40 416
  focusable: false
  &save: true
  opacity: 0.95
  image-source: /images/ui/miniwindow